---
Language: Cpp

IndentWidth: 4
TabWidth: 4
UseTab:	Never

AccessModifierOffset: -4
AlignAfterOpenBracket: true
AlignEscapedNewlinesLeft: true

PointerAlignment: Right
SortIncludes: true

BreakBeforeBraces: Custom
BraceWrapping:   
    AfterClass: true
    AfterControlStatement: true
    AfterEnum: true
    AfterFunction: true
    AfterNamespace: true
    AfterObjCDeclaration: true
    AfterStruct: true
    AfterUnion:	true
    BeforeCatch: true
    BeforeElse:	true
    IndentBraces: false
...
